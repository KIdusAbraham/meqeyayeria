SELECT db_name (f.database_id) DBName, file_name(f.file_id) [file_name], 
		volume_mount_point, 
		total_bytes, 
		available_bytes,
		(cast(available_bytes as numeric))/(cast (total_bytes as numeric))*100  percent_used

FROM sys.master_files AS f  
CROSS APPLY sys.dm_os_volume_stats(f.database_id, f.file_id);  
