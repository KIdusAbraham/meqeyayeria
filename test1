--query to get the maximum size of the column in the table
Declare @table nvarchar (128)
Declare @idcol nvarchar (128)
Declare @sql nvarchar (max)
  	--initialize the table 
Set @table = '[HumanResources].[Department]' --tablename
Set @sql = 'select ( 0 '
Select @sql = @sql + ' + MAX(ISNULL(datalength(' + name + '), 1))'
	From sys.columns
	Where object_id = object_id(@table) and is_computed = 0
Set @sql = @sql + ') as rowsize from ' + @table
Exec (@sql) 
